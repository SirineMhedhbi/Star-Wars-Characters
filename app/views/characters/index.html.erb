<style>
  body {
    font-family: 'Arial', sans-serif;
    background-color: #f4f4f4;
    color: #333;
  }
  h1 {
    color: #004d99;
    text-align: center;
  }
  h2 {
    color: #0073e6;
    margin-left: 20px;
  }
  ul {
    list-style-type: none;
    padding: 0;
  }
  li {
    background-color: #e6f2ff;
    border: 1px solid #b3d1ff;
    padding: 10px;
    margin: 10px;
    border-radius: 5px;
  }
  strong {
    color: #0059b3;
  }
</style>

<h1>Star Wars Characters</h1>

<% @characters_by_film.each do |film, characters| %>
  <h2><%= film %></h2>
  <ul>
    <% characters.each do |character| %>
      <li>
        <strong>Name:</strong> <%= character.name %><br>
        <strong>Mass:</strong> <%= character.mass %>kg<br>
        <strong>Homeworld:</strong> <%= character.homeworld %>
      </li>
    <% end %>
  </ul>
<% end %>
